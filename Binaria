#include <iostream>



int main(int argc, char** argv) {
	int n, vec[n];
	int dato, mit, inf, sup;
	printf("Inserte tama√±o del vector: ");
	scanf("%i", &n);
	for(int i=0; i<n; i++){
		printf("Inserte el numero para la posicion %i: ", i+1);
		scanf("%i", &vec[i]);
	}
	int aux;
	for(int i=0; i<n; i++){
		for(int j=0; j<n; j++){
			if(vec[j]>vec[i]){
				aux=vec[j];
				vec[j]=vec[j+1];
				vec[j+1]=aux;
			}
		}
	}
	
	printf("Ingrese el dato a buscar: ");
	scanf("%d",&dato); 
	inf=0; 
	sup=n; 
	while (inf<=sup) { 
		mit=(inf+sup)/2; 
		if (vec[mit]==dato){ 
			printf("dato %d encontrado posicion %d",dato,mit); 
			break; 
		} 
		if (vec[mit]>dato){ 
			sup=mit; 
			mit=(inf+sup)/2; 
		} 
		if (vec[mit]<dato){ 
			inf=mit; 
			mit=(inf+sup)/2; 
		} 
	}	 
	return 0;
}
